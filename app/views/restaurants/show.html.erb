<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @restaurant.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @restaurant.address %>
</p>

<p>
  <strong>Rating:</strong>
  <%= @restaurant.rating %>
</p>

<p>
  <strong>Reviews:</strong>
  <p><%= link_to 'Add a review', new_restaurant_review_path(@restaurant) %></p>
  <ul>
    <% @reviews.each do |review| %>
      <li>(<%= review.rating %>) <%= review.content %> <%= link_to "destroy", review_path(review), method: :delete, data: { confirm: 'Are you sure?' } %></li>
    <% end %>
  </ul>
</p>


<%= link_to 'Edit', edit_restaurant_path(@restaurant) %> |
<%= link_to 'Back', restaurants_path %>
